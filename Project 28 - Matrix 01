#include<iostream>

using namespace std;



int main(){

    int matrix1[2][2],matrix2[2][2],output[2][2];
    int x,y,z;
    char n;

    cout<<"Input matrix 1: \n";
    for(x = 0; x < 2; x++){
        for(y = 0;y<2;y++){
            cout<<"X"<<x<<" Y"<<y<<": ";
            cin>>matrix1[x][y];
        }
    }

    cout<<"Input matrix 2: \n";
    for(x = 0; x < 2; x++){
        for(y = 0;y<2;y++){
            cout<<"X"<<x<<" Y"<<y<<": ";
            cin>>matrix2[x][y];
        }}
        for(x = 0;x<2;x++)
            for(y = 0;y<2;y++)
            output[x][y] = matrix1[x][y] + matrix2[x][y];

    cout<<"Output:\n";
    for(x = 0; x<2; x++){
        for(y=0;y<2;y++)
            cout<<output[x][y]<<" ";

            cout<<"\n";
    }


}






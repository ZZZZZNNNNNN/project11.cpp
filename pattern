public class Main{
    public static void main(String[] args){
        
    int n = 10;    
    int i, j;
        for(i = 1; i <= n; i++) {
            for(j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
        

        for (i = n; i >=0; i--) {
            for (j = 0; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    
        int num = 2 * n - 2;
        for (i = n; i > 0; i--) {
            for (j = 0; j < n - i; j++) {
                System.out.print(" ");
            }
            num = num - 1;
            for (j = 1; j < i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
        
        for (i = n; i >= 1; i--) {
            for (j = 1; j < i; j++) {
                System.out.print(" ");
            }
            num = num - 1;
            for (j = 0; j <= n - i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    
    }
}


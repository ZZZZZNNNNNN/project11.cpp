#include <iostream>
#include <windows.h>

using namespace std;

int searchElem(int arr[], int n, int key){
	
	for(int i = 0; i < n; i++){
		if(i == key){
			return arr[i];
		}
	}
	return - 1;	
}

int searchInd(int arr[], int n, int val){
	for(int i = 0; i < n; i++){
		if(arr[i]==val){
			return i;
		}
	}
	return -1;
}



int main(){
	
	int list[20] = {6,1,2,4,3};
	
	int n = 5, key = 2, val = 4, output;
	
	output = searchElem(list, n, key);
	
	cout<<"Elements: "<<output<<endl;
	
	output = searchInd(list, n, val);
	cout<<"Index is: "<<output<<endl;
	
	
